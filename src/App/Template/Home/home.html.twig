{% extends "layout.html.twig" %}
{% block title %}Accueil{% endblock %}
{% block content %}
    {% block body %}
        <h1 class="text-light text-center">Les 10 derniers Meme</h1>
        <hr class="bg-light">
        {% for meme in result %}
            <div class="card toto m-5" style="width: 18rem;">
                <a href="/page-detail?id={{ meme.id }}">
                    <div class="card-body">
                        <h2 class="card-title text-center">{{meme.name}}</h2>
                    </div>
                    <hr>
                    <img class="card-img-top" src="{{meme.illustration_image_url}}" alt="Card image cap">
                </a>
            </div>
        {% endfor %}
    {% endblock %}
{% endblock %}

