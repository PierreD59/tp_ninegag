{% extends "layout.html.twig" %}
{% block title %}Page d√©tail - {{meme.name}}{% endblock %}
{% block content %}
    <div class="row m-0 p-0">
        <h1>{{meme.name}}</h1>
        <hr class="my-3">
        <img class="img m-auto" src="{{meme.illustration_image_url}}" alt="Card image cap">
    </div>

    <hr>
    <div class="row">
        <div class="col-md-6">
            <form action="" method="post">
                <div class="form-group">
                    <label for="pseudo">Votre Pseudo</label>
                    <input type="text" class="form-control" id="pseudo" name="pseudo">
                </div>
                <div class="form-group">
                    <label for="comment">Votre Commentaire</label>
                    <input type="text" class="form-control" id="comment" name="comment">
                </div>
                <button type="submit" name="addComment" class="btn btn-primary my-3">Envoyer un commentaire</button>
            </form>
        </div>
        <div class="col-md-6">
            {% for comment in comments %}
                <p>{{comment.name}}</p>
                <p>{{comment.comment}}</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}

